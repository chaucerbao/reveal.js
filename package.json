{
  "name": "@chaucerbao/reveal.js",
  "version": "0.1.2",
  "description": "Reveal groups of elements as the user scrolls through your website",
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "homepage": "https://github.com/chaucerbao/reveal.js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chaucerbao/reveal.js.git"
  },
  "bugs": {
    "url": "https://github.com/chaucerbao/reveal.js/issues"
  },
  "main": "dist/reveal.js",
  "types": "dist/reveal.d.ts",
  "files": [
    "dist/reveal.js",
    "dist/reveal.map",
    "dist/reveal.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,ts}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.14.3",
    "shx": "^0.3.2",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "start": "shx rm -rf dist/ && parcel example/index.html",
    "build": "shx rm -rf dist/ && tsc && parcel build --global reveal src/reveal.ts",
    "clean": "shx rm -rf .cache/ dist/"
  }
}
