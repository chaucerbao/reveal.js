{
  "name": "@chaucerbao/reveal.js",
  "version": "0.1.4",
  "description": "Reveal groups of elements as the user scrolls through your website",
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "homepage": "https://github.com/chaucerbao/reveal.js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chaucerbao/reveal.js.git"
  },
  "bugs": {
    "url": "https://github.com/chaucerbao/reveal.js/issues"
  },
  "main": "dist/reveal.js",
  "types": "dist/reveal.d.ts",
  "files": [
    "dist/reveal.js",
    "dist/reveal.d.ts"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "@types/node": "^14.0.24",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "parcel-bundler": "^1.12.4",
    "prettier": "^2.0.5",
    "shx": "^0.3.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "start": "shx rm -rf dist/ && parcel example/index.html",
    "build": "shx rm -rf dist/ && tsc && parcel build --no-source-maps --global reveal src/reveal.ts",
    "clean": "shx rm -rf .cache/ dist/",
    "prepublishOnly": "npm run build"
  }
}
