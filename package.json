{
  "name": "reveal.js",
  "version": "0.1.0",
  "description": "Reveal groups of elements as the user scrolls through your website",
  "author": "Alvin Chan <no@email.com>",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,ts}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "package-lock.json"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "devDependencies": {
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.14.3",
    "shx": "^0.3.2",
    "typescript": "^3.1.3"
  },
  "scripts": {
    "start": "parcel src/example.html",
    "build": "npm run clean && parcel build src/reveal.ts",
    "clean": "shx rm -rf .cache/ dist/"
  }
}
